@using TaskManager_WEB.Resources
@model DepartmentCreateDto
@inject LanguageService ShareLocalizer

@{
    ViewBag.Title = @ShareLocalizer.Getkey("AddNewDepartment").Value;
}

<div class="container mt-5">
    <h2 class="mb-4">@ShareLocalizer.Getkey("AddNewDepartment").Value</h2>

    <form asp-action="DepartmentCreate" method="post">
        <div class="form-group">
            <label asp-for="DepartmentName" class="form-label">@ShareLocalizer.Getkey("DepartmentName").Value</label>
            <input asp-for="DepartmentName" class="form-control" placeholder="@ShareLocalizer.Getkey("EnterDepartmentName").Value" required />
            <span asp-validation-for="DepartmentName" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">@ShareLocalizer.Getkey("Add").Value</button>
            <a asp-action="GetAllusers" asp-controller="user" class="btn btn-secondary">@ShareLocalizer.Getkey("Back").Value</a>
        </div>
    </form>
</div>
