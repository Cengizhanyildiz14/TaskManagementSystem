@using TaskManager_WEB.Resources
@{
    Layout = null;
}
@inject LanguageService ShareLocalizer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ShareLocalizer.Getkey("PrivacyPolicy").Value</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1 class="text-center">@ShareLocalizer.Getkey("PrivacyPolicy").Value</h1>
        <p class="text-center text-muted">https://localhost:7183 @ShareLocalizer.Getkey("PrivacyPolicy").Value</p>
        <p><strong>@ShareLocalizer.Getkey("WebsiteType").Value:</strong> @ShareLocalizer.Getkey("TaskManagementSystem").Value</p>
        <p><strong>@ShareLocalizer.Getkey("EffectiveDate").Value:</strong> _________ @ShareLocalizer.Getkey("Day").Value, ______________, _________</p>
        <p>https://localhost:7183 ("@ShareLocalizer.Getkey("Website").Value") @ShareLocalizer.Getkey("TaskManagementSystem").Value tarafından sahiplenilmekte ve işletilmektedir. @ShareLocalizer.Getkey("TaskManagementSystem").Value’ne şu adresten ulaşılabilir:</p>
        <address>
            taskmanagement@yopmail.com<br>
            (123) 456-7890<br>
            tkteknoloji ofisi
        </address>

        <h2>@ShareLocalizer.Getkey("Purpose").Value</h2>
        <p>@ShareLocalizer.Getkey("PrivacyPolicyPurpose").Value</p>
        <ul>
            <li>@ShareLocalizer.Getkey("CollectedPersonalData").Value</li>
            <li>@ShareLocalizer.Getkey("DataUsage").Value</li>
            <li>@ShareLocalizer.Getkey("DataSharing").Value</li>
            <li>@ShareLocalizer.Getkey("UserRights").Value</li>
            <li>@ShareLocalizer.Getkey("CookiePolicy").Value</li>
        </ul>
        <p>@ShareLocalizer.Getkey("AdditionalConditions").Value</p>

        <h2>@ShareLocalizer.Getkey("Consent").Value</h2>
        <p>@ShareLocalizer.Getkey("ConsentDescription").Value</p>
        <ul>
            <li>@ShareLocalizer.Getkey("PrivacyPolicyTerms").Value</li>
            <li>@ShareLocalizer.Getkey("DataCollectionUsageStorage").Value</li>
        </ul>

        <h2>@ShareLocalizer.Getkey("CollectedPersonalData").Value</h2>
        <p>@ShareLocalizer.Getkey("CollectedPersonalDataDescription").Value</p>

        <h3>@ShareLocalizer.Getkey("NonAutomaticData").Value</h3>
        <p>@ShareLocalizer.Getkey("NonAutomaticDataDescription").Value</p>
        <ul>
            <li>@ShareLocalizer.Getkey("NameAndSurname").Value</li>
            <li>@ShareLocalizer.Getkey("EmailAddress").Value</li>
            <li>@ShareLocalizer.Getkey("AutofillData").Value</li>
        </ul>
        <p>@ShareLocalizer.Getkey("DataCollectionMethods").Value</p>
        <ul>
            <li>@ShareLocalizer.Getkey("Cookie").Value</li>
        </ul>

        <h2>@ShareLocalizer.Getkey("DataUsage").Value</h2>
        <p>@ShareLocalizer.Getkey("DataUsageDescription").Value</p>

        <h2>@ShareLocalizer.Getkey("DataSharing").Value</h2>

        <h3>@ShareLocalizer.Getkey("Employees").Value</h3>
        <p>@ShareLocalizer.Getkey("EmployeesDataSharing").Value</p>

        <h3>@ShareLocalizer.Getkey("OtherDisclosures").Value</h3>
        <p>@ShareLocalizer.Getkey("OtherDisclosuresDescription").Value</p>
        <ul>
            <li>@ShareLocalizer.Getkey("RequiredByLaw").Value</li>
            <li>@ShareLocalizer.Getkey("LegalProcess").Value</li>
            <li>@ShareLocalizer.Getkey("ProtectRights").Value</li>
            <li>@ShareLocalizer.Getkey("PotentialBuyers").Value</li>
        </ul>
        <p>@ShareLocalizer.Getkey("NoControlOverLinks").Value</p>

        <h2>@ShareLocalizer.Getkey("DataRetention").Value</h2>
        <p>@ShareLocalizer.Getkey("DataRetentionDescription").Value</p>

        <h2>@ShareLocalizer.Getkey("DataProtection").Value</h2>
        <p>@ShareLocalizer.Getkey("DataProtectionDescription").Value</p>
        <p>@ShareLocalizer.Getkey("SecurityRiskWarning").Value</p>

        <h2>@ShareLocalizer.Getkey("Children").Value</h2>
        <p>@ShareLocalizer.Getkey("ChildrenDescription").Value</p>

        <h2>@ShareLocalizer.Getkey("AccessAmendDeleteObject").Value</h2>
        <p>@ShareLocalizer.Getkey("AccessAmendDeleteObjectDescription").Value</p>
        <address>
            Cengizhan Yıldız<br>
            cengiz@mail.com<br>
            (111) 111-1111<br>
            heryer
        </address>

        <h2>@ShareLocalizer.Getkey("CookiePolicy").Value</h2>
        <p>@ShareLocalizer.Getkey("CookieDescription").Value</p>

        <h3>@ShareLocalizer.Getkey("CookieTypes").Value</h3>
        <ul>
            <li><strong>@ShareLocalizer.Getkey("FunctionalCookies").Value:</strong> @ShareLocalizer.Getkey("FunctionalCookiesDescription").Value</li>
            <li><strong>@ShareLocalizer.Getkey("AnalyticalCookies").Value:</strong> @ShareLocalizer.Getkey("AnalyticalCookiesDescription").Value</li>
            <li><strong>@ShareLocalizer.Getkey("TargetingCookies").Value:</strong> @ShareLocalizer.Getkey("TargetingCookiesDescription").Value</li>
            <li><strong>@ShareLocalizer.Getkey("ThirdPartyCookies").Value:</strong> @ShareLocalizer.Getkey("ThirdPartyCookiesDescription").Value</li>
        </ul>

        <h2>@ShareLocalizer.Getkey("Changes").Value</h2>
        <p>@ShareLocalizer.Getkey("ChangesDescription").Value</p>

        <h2>@ShareLocalizer.Getkey("ContactInfo").Value</h2>
        <p>@ShareLocalizer.Getkey("ContactInfoDescription").Value</p>
        <address>
            cengiz@mail.com<br>
            (111) 111-1111<br>
            heryer
        </address>

        <footer class="text-center border-top pt-3 mt-5">
            &copy; 2024 - TaskManager_WEB - <a asp-area="" asp-controller="Home" asp-action="Privacy">@ShareLocalizer.Getkey("PrivacyPolicy").Value</a>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

<style>
    body {
        font-family: Arial, sans-serif;
        line-height: 1.6;
    }

    h1, h2, h3 {
        text-align: left;
        margin-top: 20px;
        margin-bottom: 10px;
        font-weight: bold;
    }

    h1 {
        font-size: 2rem;
        margin-bottom: 20px;
    }

    h2 {
        font-size: 1.5rem;
        margin-bottom: 15px;
    }

    h3 {
        font-size: 1.2rem;
        margin-bottom: 10px;
    }

    p, ul, address {
        margin-bottom: 15px;
    }

    ul {
        padding-left: 20px;
    }

    .container {
        max-width: 900px;
        margin: auto;
        padding: 20px;
    }

    .text-muted {
        color: #6c757d;
    }
</style>
