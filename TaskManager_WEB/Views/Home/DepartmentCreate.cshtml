@model DepartmentCreateDto

@{
    ViewBag.Title = "Yeni Departman Ekle";
}

<div class="container mt-5">
    <h2 class="mb-4">Yeni Departman Ekle</h2>

    <form asp-action="DepartmentCreate" method="post">
        <div class="form-group">
            <label asp-for="DepartmentName" class="form-label">Departman Adı</label>
            <input asp-for="DepartmentName" class="form-control" placeholder="Departman adı girin" required />
            <span asp-validation-for="DepartmentName" class="text-danger"></span>
        </div>

        <div class=" mt-3">
            <button type="submit" class="btn btn-primary">Ekle</button>
            <a asp-action="GetAllusers" asp-controller="Home" class="btn btn-secondary">Geri Dön</a>
        </div>       
    </form>
</div>


