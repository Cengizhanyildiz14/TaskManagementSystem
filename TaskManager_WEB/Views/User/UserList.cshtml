@model List<UserListVM>

<div class="container mt-5">
    <h2 class="mb-4">Tüm Kullanıcılar</h2>

    <div class="form-group mt-3 d-flex justify-content-end mb-2">
        <a asp-action="GetAllusers" asp-controller="user" class="btn btn-secondary">Geri Dön</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th class="text-center align-middle">Ad</th>
                    <th class="text-center align-middle">Soyad</th>
                    <th class="text-center align-middle">E-posta</th>
                    <th class="text-center align-middle">Departman</th>
                    <th class="text-center align-middle">Görev Durumu</th>
                    <th class="text-center align-middle">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td class="text-center align-middle">@user.User.Name</td>
                        <td class="text-center align-middle">@user.User.LastName</td>
                        <td class="text-center align-middle">@user.User.Email</td>
                        <td class="text-center align-middle">@user.User.Department.DepartmentName</td>
                        <td class="text-center align-middle" data-bs-toggle="tooltip" title="
                        Tamamlanan Görevler: @user.CompletedTasksCount<br>
    Reddedilen Görevler: @user.RejectedTasksCount<br>
    Süresi Dolan Görevler: @user.ExpiredTasksCount<br>
    Beklemede Olan Görevler: @user.PendingTasksCount">
                                    Toplam Görev: @(@user.CompletedTasksCount + @user.RejectedTasksCount + @user.ExpiredTasksCount + @user.PendingTasksCount)
                                </td>
                        <td class="text-center align-middle">
                            <div class="d-flex justify-content-center">
                                <form asp-action="UserDelete" asp-controller="user" method="post">
                                    <input type="hidden" name="id" value="@user.User.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl, {
                html: true
            });
        });
    });
</script>
