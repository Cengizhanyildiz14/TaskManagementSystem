@model UserCreateVm

@{
    ViewData["Title"] = "Kullanıcı Oluştur";
}

<div class="container mt-5">
    <h2 class="mb-4">Kullanıcı Oluştur</h2>

    <form asp-action="UserCreate" method="post">
        <div class="form-group">
            <label asp-for="UserCreateDto.Name" class="control-label">Ad</label>
            <input asp-for="UserCreateDto.Name" class="form-control" />
            <span asp-validation-for="UserCreateDto.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="UserCreateDto.LastName" class="control-label">Soyad</label>
            <input asp-for="UserCreateDto.LastName" class="form-control" />
            <span asp-validation-for="UserCreateDto.LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="UserCreateDto.Email" class="control-label">E-posta</label>
            <input asp-for="UserCreateDto.Email" class="form-control" />
            <span asp-validation-for="UserCreateDto.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="UserCreateDto.Gender" class="control-label">Cinsiyet</label>
            <div>
                <label class="radio-inline">
                    <input asp-for="UserCreateDto.Gender" type="radio" value="Male" /> Bay
                </label>
                <label class="radio-inline">
                    <input asp-for="UserCreateDto.Gender" type="radio" value="Female" /> Bayan
                </label>
            </div>
            <span asp-validation-for="UserCreateDto.Gender" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="UserCreateDto.DepartmentId" class="control-label">Departman</label>
            <select asp-for="UserCreateDto.DepartmentId" class="form-control" asp-items="Model.DepartmentList">
                <option value="">Seçiniz...</option>
            </select>
            <span asp-validation-for="UserCreateDto.DepartmentId" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <input type="submit" value="Oluştur" class="btn btn-primary" />
            <a asp-action="GetAllusers" asp-controller="user" class="btn btn-secondary">Geri Dön</a>
        </div>
    </form>
</div>

