<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-3">
                    <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                        <img class="rounded-circle mt-5" width="300px" src="@Url.Content("~/images/pp.png")">
                        <span class="font-weight-bold fw-bold">@ViewBag.FullName</span>
                        <span class="text-black-50 fw-bold">@ViewBag.Email</span>
                        <span></span>
                    </div>
                </div>
                <div class="col-md-9 border-right">
                    <div class="p-3 py-5">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="text-right">Profile Settings</h4>
                        </div>
                        <div class="row mt-2">
                            <div class="col-md-6">
                                <label class="labels">Ad</label>
                                <input type="text" class="form-control fw-bold text-capitalize" placeholder="-----------------" value="@ViewBag.FirstName" readonly>
                            </div>
                            <div class="col-md-6">
                                <label class="labels">Soyad</label>
                                <input type="text" class="form-control fw-bold text-capitalize" placeholder="-----------------" value="@ViewBag.LastName" readonly>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-12">
                                <label class="labels">Mobile Number</label>
                                <input type="text" class="form-control" placeholder="-----------------" value="" readonly>
                            </div>
                            <div class="col-md-12">
                                <label class="labels">Address Line 1</label>
                                <input type="text" class="form-control" placeholder="-----------------" value="" readonly>
                            </div>
                            <div class="col-md-12">
                                <label class="labels">Address Line 2</label>
                                <input type="text" class="form-control" placeholder="-----------------" value="" readonly>
                            </div>
                            <div class="col-md-12">
                                <label class="labels">Postcode</label>
                                <input type="text" class="form-control" placeholder="-----------------" value="" readonly>
                            </div>
                            <div class="col-md-12">
                                <label class="labels">Departman</label>
                                <input type="text" class="form-control fw-bold text-capitalize" placeholder="-----------------" value="@ViewBag.DepartmentName" readonly>
                            </div>
                            <div class="col-md-12">
                                <label class="labels">Area</label>
                                <input type="text" class="form-control" placeholder="-----------------" value="" readonly>
                            </div>
                            <div class="col-md-12">
                                <label class="labels">Email ID</label>
                                <input type="text" class="form-control fw-bold" placeholder="-----------------" value="@ViewBag.Email" readonly>
                            </div>
                            <div class="col-md-12">
                                <label class="labels">Education</label>
                                <input type="text" class="form-control" placeholder="-----------------" value="" readonly>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <label class="labels">Country</label>
                                <input type="text" class="form-control" placeholder="-----------------" value="" readonly>
                            </div>
                            <div class="col-md-6">
                                <label class="labels">State/Region</label>
                                <input type="text" class="form-control" placeholder="-----------------" value="" readonly>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
