@using TaskManager_WEB.Resources
@model TaskUpdateVM
@inject LanguageService ShareLocalizer

<div class="container mt-5">
    <h2 class="mb-4">@ShareLocalizer.Getkey("UpdateTask").Value</h2>

    <form asp-action="Update" method="post" onsubmit="return confirm('@ShareLocalizer.Getkey("ConfirmSave").Value');">
        <div class="form-group">
            <label asp-for="TaskUpdateDto.TaskName" class="control-label">@ShareLocalizer.Getkey("TaskName").Value</label>
            <input asp-for="TaskUpdateDto.TaskName" class="form-control" />
            <span asp-validation-for="TaskUpdateDto.TaskName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TaskUpdateDto.DepartmentId" class="control-label">@ShareLocalizer.Getkey("DepartmentName").Value</label>
            <select asp-for="TaskUpdateDto.DepartmentId" class="form-control" asp-items="Model.DepartmentList"></select>
            <span asp-validation-for="TaskUpdateDto.DepartmentId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TaskUpdateDto.AsaignedUserId" class="control-label">@ShareLocalizer.Getkey("AssignedUser").Value</label>
            <select asp-for="TaskUpdateDto.AsaignedUserId" class="form-control" asp-items="Model.UserList"></select>
            <span asp-validation-for="TaskUpdateDto.AsaignedUserId" class="text-danger"></span>
        </div>

        <input type="hidden" asp-for="TaskUpdateDto.Id" />
        <input type="hidden" asp-for="TaskUpdateDto.CreaterUserId" />

        <div class="form-group mt-3">
            <input type="submit" value="@ShareLocalizer.Getkey("Update").Value" class="btn btn-primary" />
            <a asp-action="GetAllUsers" asp-controller="user" class="btn btn-secondary">@ShareLocalizer.Getkey("Back").Value</a>
        </div>
    </form>
</div>
